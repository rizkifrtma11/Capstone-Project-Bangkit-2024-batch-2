<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RasaNusa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. ACTION BAR AND BUTTON COMPONENT -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <!--Text/icon yang ada diatas warna primary-->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/red_brown</item>

        <!--transition and animation -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>


    <style name="Theme.colorOnSurfaceProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnSurface">@color/red_brown</item>
    </style>

    <style name="colorLineDetail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/red_brown</item>
    </style>

    <style name="bottomSheetDialog" >
        <item name="android:textColor">@color/red_brown</item>
        <item name="background">@color/white</item>
    </style>

    <style name="profileLayout" >
        <item name="android:textColor">@color/red_brown</item>
        <item name="tint">@color/red_brown</item>
        <item name="background">@color/white</item>
    </style>
</resources>