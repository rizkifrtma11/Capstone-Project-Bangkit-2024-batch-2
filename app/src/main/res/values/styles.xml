<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.RasaNusa.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.RasaNusa.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.RasaNusa.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="marginCenter">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="txt_food_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="txt_justify">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="cardview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="stroke">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/red_brown</item>
    </style>

    <style name="Theme.RasaNusa.Fullscreen" parent="Theme.RasaNusa">
        <item name="android:actionBarStyle">@style/Widget.Theme.RasaNusa.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.RasaNusa.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="border_input_uname" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_yellow</item>
        <item name="boxStrokeErrorColor">@color/red_brown</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>